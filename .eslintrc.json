{
  "extends": [
    "google",
    "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["require-jsdoc-except"],
  "ignorePatterns": ["build/", ".aws-sam/", "node_modules/"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "require-jsdoc": "off",
    "quote-props": "off",
    "eqeqeq": ["error", "always"],
    "no-template-curly-in-string": "error",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ]
  }
}
